<h1>Listing libraries</h1>

<table>
  <thead>
    <tr>
      <th>Moviename</th>
      <th>Director</th>
      <th>Releasedate</th>
      <th>Sinopse</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.movieName %></td>
        <td><%= library.director %></td>
        <td><%= library.releaseDate %></td>
        <td><%= library.sinopse %></td>
        <td><%= library.category %></td>
        <td><%= link_to 'Show', library %></td>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library', new_library_path %>
